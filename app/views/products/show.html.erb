<% infos = @product.infos -%>
<%= content_for :head do %>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"></meta>

  <title><%= "#{t :product_page_title} #{infos[:brand_name]} #{infos[:name]}" %></title>

  <meta name="description" content="<%= t_safe :product_meta_description %> <%= infos[:brand_name] %> <%= infos[:name] %>"></meta>
  <meta name="keywords" content="<%= t :meta_keywords %>, <%= t :product_laptop %>"></meta>

  <%= include_stylesheets :product %>
  <script type="text/javascript">
    // Load values for the specs ratings in the bar display
    var bar_length_1 = <%= infos[:specification_values][11][:sv_score] %>
    var bar_length_2 = <%= infos[:specification_values][5][:sv_score] %>
    var bar_length_3 = <%= infos[:specification_values][3][:sv_score] %>
    var bar_length_4 = <%= infos[:specification_values][2][:sv_score] %>
    var bar_length_5 = <%= infos[:specification_values][4][:sv_score] %>
    var bar_length_6 = <%= infos[:specification_values][9][:sv_score] %>
  </script>
  <%= include_javascripts :product %>
  <!--[if lte IE 8]>
    <link type="text/css" rel="stylesheet" href="/stylesheets/product_lteie8.css">
  <![endif]-->

<% end %>
<div id="top_wrapper">
  <div id="top">
    <%= content_tag :h1, "#{t(:product_title)} <strong>#{infos[:brand_name]} #{infos[:name]} </strong>".html_safe, :class => "title" %>
    <div id="top_left">
      <div class="picture_box">
        <%= image_tag infos[:big_img_url], :alt => "#{t :product_laptop} #{infos[:brand_name]} #{infos[:name]}", :id => "picture" %>
      </div>
    </div>

    <div id="top_right">
      <div id="main_specs">
        <h2><%= t :product_main_specs %></h2>
        <table id="main_specs_table">
          <tbody>
            <% bar_id = 1 -%>
            <% [11, 5, 3, 2, 4, 9].each do |spec_id|%>
              <%= render 'main_spec', :spec_id => spec_id, :infos => infos, :bar_id => bar_id %>
              <% bar_id += 1 %>
            <% end -%>
          </tbody>
        </table>
      </div>

      <div class="social_sharing">
        <ul>
          <li class="share_text"><%= t :product_share %></li>
          <!-- Passer dans les locales le texte (encodÃ© en URL) Remplacer http://www.test.com par l'URL de la page actuelle -->
          <li>
            <%= link_to "http://twitter.com/share?text=#{(t(:product_share_message))}+#{product_url @product}", :target => "_blank", :rel => "nofollow" do %>
              <img src="/images/product/twitter_icon.png" />
            <% end -%>
          </li>
          <li>
            <%= link_to "http://www.facebook.com/share.php?u=#{product_url @product}&title=#{t :product_share_message}", :target => "_blank", :rel => "nofollow" do %>
              <img src="/images/product/facebook_icon.png" />
            <% end -%>
          </li>
        </ul>
      </div>

    </div>

  </div>
  <div class="clearfix"></div>
</div>

<div id="bottom_wrapper">
  <div id="bottom">

    <div id="offers">

      <h2><%= offers_number_text %></h2>

      <div class="offers_wrapper">
       <table id="offers_table">
          <tbody>
            <% @product.offers.order("price asc").each do |o| -%>
              <%= render 'offer', :infos => infos, :offer => o %>
            <% end -%>
          </tbody>
        </table>
      </div>
    </div>

    <%# Social media buttons %>
    <div class="social_media">
	    <p><%= t :product_vote_for_us %> </p>
	    <div class="plus_one">
		    <iframe src="http://www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.choisirfacile.com&amp;send=false&amp;layout=button_count&amp;width=100&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:100px; height:21px;" allowTransparency="true"></iframe>
		    <a href="http://twitter.com/share" class="twitter-share-button" data-url="http://www.choisirfacile.com" data-text="Un conseiller interactif trouver un PC portable :" data-count="horizontal" data-lang="fr">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
		  <g:plusone href="http://www.choisirfacile.com" size="medium"></g:plusone>
		  </div>
	  </div>

    <div id="specs_sheet">

      <div id="tables_header">
        <h2><%= t :product_detailed_specs %></h2>
      </div>

      <div id="tables">
        <div id="tables_left">
          <% parameters_for_left_table.each do |title, specs| -%>
            <%= render 'specs_table', :title => title, :specs => specs, :infos => infos %>
          <% end %>
        </div>
        <div id="tables_right">
          <% parameters_for_right_table.each do |title, specs| -%>
            <%= render 'specs_table', :title => title, :specs => specs, :infos => infos %>
          <% end %>
        </div>
        <div class="clearfix"></div>
      </div>

    </div>
    <p id="spec_disclaimer"><%=  t :disclaimer_for_specs_values%></p>
  </div>

</div>

