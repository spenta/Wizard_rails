<h1>Listing products</h1>

<table>
  <tr>
    <th>name</th>
    <th>small_img_url</th>
    <th>big_img_url</th>
    <th>brand</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= image_tag product.small_img_url, {:height => 60}%></td>
    <td><%= product.name %></td>
    <td><%= product.brand.name %></td>
    <td><%= link_to 'Show', product %></td>
  </tr>
<% end %>
</table>

