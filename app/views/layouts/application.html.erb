      })();
    </script>

  </head>
  <body>
    <div id="header">
      <div class="wrapper">
        <%= link_to :root do %>
          <img id="logo" src="/images/home/choisir_facile_logo.png" alt="Trouvez rapidement le meilleur ordinateur PC portable avec Choisir Facile" />
        <% end %>
        <div id="header_menu">
          <ul>
            <li class="wizard_incentive_text">
              <%= t_safe :wizard_incentive %>
              <img class="arrow" src="/images/arrow.png" />
            </li>
            <li class="wizard_header_button">
              <%= link_to 'Conseiller interactif', user_requests_path, :method => :post, :id => "link_to_form" %>
            </li>
            <li><img src="/images/home/menu_vspacer.png" /></li>
            <li>
              <%= link_to "Catalogue", products_path %>
            </li>
          </ul>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
    <div id="ie6_wrapper">
      <div id="ie6_disclaimer"><%= t_safe :ie6_disclaimer %></div>
    </div>

    <%= yield %>

    <div class="clearfix"></div>

    <div id="footer">
      <div class="footer_wrapper">
        <div class="footer_left">
          <p>Â© 2011 | Spenta SAS | <%= t_safe :rights_reserved %></p>
        </div>
        <div class="footer_right">
          <p>
            <%= link_to t_safe(:legal_info), "/legal" %> | <%= link_to t_safe(:eula), "/terms" %>
          </p>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </body>
</html>

