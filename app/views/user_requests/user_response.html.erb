<% star_products = @user_response.get_star_products_to_display.sort! {|p1, p2| p1.spenta_score <=> p2.spenta_score} -%>
<% good_deal_products = @user_response.get_good_deal_products_to_display.sort! {|p1, p2| p1.spenta_score <=> p2.spenta_score} -%>
<% important_specs_id = get_important_specs_id_from @user_response.gammas -%>

<% content_for :head do -%> 
  <title><%= t :result_page_title %></title>
  <%= include_stylesheets :result%>
<% end -%> 

<div id="resultpage">
  <%# Section du haut : produits recommandés  %>
  <%= render 'star_products_group', :star_products => star_products, :important_specs_id =>  important_specs_id %>
  <%# Section du bas : autres produits adaptés %>            
  <%= render 'good_deal_products_group', :good_deal_products => good_deal_products, :important_specs_id =>  important_specs_id %>
</div>
