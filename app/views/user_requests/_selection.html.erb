<% content_for :head do -%> 
  <title>Choisir Facile</title>
  <script type="text/javascript">
    var $j = jQuery.noConflict();
    $j(document).ready(function()
      {
        // convert a <form> into a tabbed form
        $j('form.tabbed').tabbedForm({
          // custom text of the close button created by the javascript
          closeText:'<%= t :selection_step_validate %>',
          //closeText:'<%= t_safe :selection_step_validate %>',
          // container for the .qinfo into the questions
          infoContainer:$j('#myFormInfoContainer')
        });

        // convert all <div class="answer"> with the
        // class 'multichoice' into a set of checkboxes
        $j('.answer.multichoice').answerMultichoice({
          // if we want the js to add a none checkbox
          addNone:true,
          // text of the none checkbox
          noneText:"<%=t_safe :selection_step_dont_care %>"
          });
        });
    </script>
<% end -%>
<%SuperUsage.all.each do |su|%>
  <%unless su.name == "Mobilite"%>
    <% su_id = su.id -%>
    <div class="question" id=<%= "super-usage#{su_id}" %>>
      <span class="qicon"></span>
      <div class="qbody">
        <div class="qname"><h2 class="usageTitle"><%=t "super_usage_title#{su_id}".to_sym%></h2></div>
        <div class="qdesc">
              <h3 class="usageSubQuestion"><%=t "super_usage_question#{su_id}".to_sym%></h3>
              <p class="usageExplain"><%=t :selection_step_hint %></p>
        </div>
        <div class="qinfo">
          <%= t("selection_step_sideinfo_superusage#{su_id}".to_sym).html_safe %>
        </div>
        <%@usage_choices=@user_request.usage_choices.where(:usage_id => su.usages)%>
        <div class="answer multichoice">
            <%@usage_choices.each do |uc|%>
              <% usage_id = uc.usage.id -%>
              <label>
                <%=check_box_tag "usage_choice_selected_#{uc.id}", 1, uc.is_selected%><input type="hidden" value="on"/>
                <span class="name"><%=t "usage_title#{usage_id}".to_sym%></span>
                <span class="desc"><%=t "usage_description#{usage_id}".to_sym%></span>
              </label>
            <%end%>
        </div>
      </div>
    </div>
  <%end%>
<%end%>
