<tbody>
  <% good_deal_products.each do |p| -%>
  <%# Produit %>
  <tr class="product">
    <td class="thumb">
      <%= link_to product_path(p.product_id), :target => "_blank" do%>
        <%= image_tag p.small_img_url, :alt => p.brand_name+' '+p.name, :class => "thumb" %>
      <% end -%>
    </td>
    <td class="infos">
      <%= link_to product_path(p.product_id), :target => "_blank", :class => "nounderline" do%>
        <div class="brand"><%= p.brand_name %></div>
        <div class="name"><%= truncate p.name, :length => 20 %></div>
      <% end -%>
    </td>
    <td class="price">
      <%= link_to product_path(p.product_id), :target => "_blank", :class => "nounderline" do%>
        <div class="price"><%= p.price.floor %><small>â‚¬<%= get_cents_from p.price %></small></div>                            
        <div class="more"><%= t :extras_more -%></div>
      <% end -%>
    </td>
    <%# Spenta score %>
    <%= content_tag :td, :class => "score textshadingdark bckgcolorid#{get_color_number(p.spenta_score/100)}" do %>
      <%= p.spenta_score.round %><small>%</small>
    <% end -%>
    <%# Specs %>
    <% important_specs_id.each do |spec_id| -%>
      <%spec_score_percent = get_percentage_from(p.specification_values[spec_id][:score], @user_response.sigmas[spec_id]) %>
      <%= content_tag :td, :class => "textshading colorid#{get_color_number(spec_score_percent.to_f/100)}" do%>
        <%= spec_score_percent%><small>%</small>
        <p class="specvalue"><%= spec_value_with_unit p, spec_id%></p>
      <% end -%>
    <% end -%>
  </tr>
  <% end -%>
</tbody>
