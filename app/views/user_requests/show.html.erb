<p id="notice"><%= notice %></p>

<p>
  <b>Order by:</b>
  <%= @user_request.order_by %>
</p>

<p>
  <b>Num result:</b>
  <%= @user_request.num_result %>
</p>

<p>
  <b>Start index:</b>
  <%= @user_request.start_index %>
</p>
<%SuperUsage.all.each do |su|%>
  <h1>Super Usage : <%=su.name%></h1>
  <%su.usages.each do |u|%>
    <h2>Usage : <%=u.name%></h2>
    <%@user_request.usage_choices.where(:usage_id => u.id).each do |uc|%>
      <p>choix : <%=uc.weight_for_user%></p>
      <%=form_for uc do |f|%>
        <p>
          <%=f.label :weight_for_user, "Importance"%>
          <%=f.text_field :weight_for_user%>
        </p>
      <%end%>  
    <%end%>
  <%end%>
  <p></p>
  <p></p>
  
<%end%>


