<%= form_for(@user_request) do |f| %>
  <% if @user_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_request.errors.count, "error") %> prohibited this user_request from being saved:</h2>

      <ul>
      <% @user_request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :order_by %><br />
    <%= f.text_field :order_by %>
  </div>
  <div class="field">
    <%= f.label :num_result %><br />
    <%= f.text_field :num_result %>
  </div>
  <div class="field">
    <%= f.label :start_index %><br />
    <%= f.text_field :start_index %>
  </div>
  
  <%SuperUsage.all.each do |su|%>  
    <h1>Super Usage : <%=su.name%></h1>
    <% first_usage_choice = @user_request.usage_choices.where(:usage_id => su.usages.first.id).first %>
    <%=text_field_tag "super_usage_choice_#{su.id}", first_usage_choice.weight_for_user%>
    <%su.usages.each do |u|%>
      <h2>Usage : <%=u.name%></h2>
    <%end%>
  <%end%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
