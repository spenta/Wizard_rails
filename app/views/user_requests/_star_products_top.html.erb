<tbody>
  <%# Rang superieur = arrondis des vignettes %>
  <tr>
    <% is_first_column = true -%>
    <% star_products.each do |p| -%>
    <%= render :partial => 'vspacer', :locals => {:is_first_column => is_first_column} %>
    <td class="bestpickcolumntop" colspan="2" />
    <% is_first_column = false -%>
    <% end -%>
  </tr>
  <%# Intitulé, modèle du PC, texte descriptif, image %>
  <tr>
    <% is_first_column = true -%>
    <% star_products.each do |p| -%>
      <%= render :partial => 'star_product_header', :locals => {:p => p, :is_first_column => is_first_column}%>
      <% is_first_column = false -%>
    <% end -%>
  </tr>
  <%# Images %>
  <tr>
    <% is_first_column = true -%>
    <% star_products.each do |p| -%>
      <%= render :partial => 'star_product_image', :locals => {:p => p, :is_first_column => is_first_column}%>
      <% is_first_column = false -%>
    <% end -%>
  </tr>
  <%# Boxes avec le score et les prix %>
  <tr>
    <% is_first_column = true -%>
    <% star_products.each do |p| -%>
      <%= render :partial => 'star_product_price_and_score', :locals => {:p => p, :is_first_column => is_first_column}%>
      <% is_first_column = false -%>
    <% end -%>
  </tr>
</tbody>
