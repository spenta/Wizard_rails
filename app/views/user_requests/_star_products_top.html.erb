<tbody>
  <%# Rang superieur = arrondis des vignettes %>
  <tr>
    <% is_first_column = true -%>
    <% star_products.each do |p| -%>
    <%= render 'vspacer', :is_first_column => is_first_column %>
    <td class="bestpickcolumntop" colspan="2" />
    <% is_first_column = false -%>
    <% end -%>
  </tr>
  <%# Intitulé, modèle du PC, texte descriptif, image %>
  <tr>
    <% is_first_column = true -%>
    <% star_products.each do |p| -%>
      <%= render 'star_product_header', :p => p, :is_first_column => is_first_column%>
      <% is_first_column = false -%>
    <% end -%>
  </tr>
  <%# Images %>
  <tr>
    <% is_first_column = true -%>
    <% star_products.each do |p| -%>
      <%= render 'star_product_image', :p => p, :is_first_column => is_first_column%>
      <% is_first_column = false -%>
    <% end -%>
  </tr>
  <%# Boxes avec le score et les prix %>
  <tr>
    <% is_first_column = true -%>
    <% star_products.each do |p| -%>
      <%= render 'star_product_price_and_score', :p => p, :is_first_column => is_first_column%>
      <% is_first_column = false -%>
    <% end -%>
  </tr>
</tbody>
